generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id
  email         String         @unique
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  sensorStations SensorStation[]

  Sensor Sensor[]
}

model Sensor {
  id          String   @id @default(cuid())
  name        String
  location    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  sensorStationId String
  sensorStation SensorStation @relation(fields: [sensorStationId], references: [id])
  SensorData SensorData[]
}

model SensorData {
  id          String   @id @default(cuid())
  sensorId    String
  sensor      Sensor   @relation(fields: [sensorId], references: [id])
  type        String   // e.g., "temperature", "humidity", "pressure"
  value       Float    // The actual reading value
  unit        String   // e.g., "Â°C", "%", "hPa"
  createdAt   DateTime @default(now())

  @@index([sensorId])
  @@index([type])
}

model SensorStation {
  id          String   @id @default(cuid())
  name        String
  location    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  Sensor Sensor[]

  @@index([userId])
}
